---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import ExampleComponent from "../components/Typing.jsx";
---

<Layout title="Welcome to Astro.">
  <main>
    <h1>Hello, I'm Eliot and</h1>
    <ExampleComponent client:idle />
    <ul role="list" class="grid grid-rows-2 grid-cols-4 gap-4">
      <Card
        class="row-span-2 col-span-2"
        href="https://docs.astro.build/"
        title="En apprendre plus sur moi"
        body="Learn how Astro works and explore the official API docs."
      />
      <Card
        class="row-span-1 col-span-1"
        href="https://astro.build/examples/"
        title="Mes Projets"
        body="Explore a collection of example projects to get you started."
      />
      <Card
        class="row-span-1 col-span-1"
        href="https://astro.build/integrations/"
        title="Mes reseaux"
        body="Supercharge your project with new frameworks and libraries."
      />
      <Card
        class="row-span-1 col-span-2"
        href="https://astro.build/themes/"
        title="Se connecter"
        body="Explore a galaxy of community-built starter themes."
      />
    </ul>
  </main>
</Layout>
